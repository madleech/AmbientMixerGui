include _controls.jade

.sound__name
	input.topcoat-text-input(data-id='name', value=model.attributes.name)
.sound__operations
	.topcoat-button(data-id='files', title="Edit sound files used in this sample")
		span.icon-menu
.sound__operations
	.topcoat-button-bar
		.topcoat-button-bar__item
			.topcoat-button-bar__button(data-id='play')
				span.icon-play3
		.topcoat-button-bar__item
			.topcoat-button-bar__button(data-id='stop')
				span.icon-stop2
.sound__loop_mute
	.topcoat-button-bar
		.topcoat-button-bar__item
			.topcoat-button-bar__button(data-id='mute', title="Mute")
				span.icon-volume-mute2
		.topcoat-button-bar__item
			.topcoat-button-bar__button(data-id='loop', class=model.attributes.loop ? 'topcoat-button--active' : '', title="Loop")
				span.icon-loop
.sound__frequency
	input.topcoat-text-input(data-id='frequency', value=model.attributes.frequency)
	| per
	+select(model.attributes.period, {
		'0': 'on demand only',
		'60': 'minute',
		'300': '5 minutes',
		'600': '10 minutes',
		'1800': '30 minutes',
		'3600': 'hour',
	})(data-id='period')
.sound__volume
	input.topcoat-range(data-id='volume', type='range', min=0, max=100, value=model.attributes.volume)
	span(data-id='volume-value')= model.attributes.volume
.sound__save.topcoat-button-bar
	.topcoat-button-bar__item
		.topcoat-button-bar__button(data-id='save')
			span.icon-checkmark
	.topcoat-button-bar__item
		.topcoat-button-bar__button(data-id='remove')
			span.icon-cross